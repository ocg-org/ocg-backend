<div class="header">
  <h1>
    <%= t(:regions) %>
    <small>Regions of the World, where you can find some climbs</small>
  </h1>
</div>

<table class="tbl">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= link_to region.name, region %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Edit', edit_region_path(region),
              :class => "embedded-button" %>
            <%= link_to 'Destroy', region, method: :delete,
              data: { confirm: 'Are you sure?' }, :class => "embedded-button-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add a Region', new_region_path, :class => "button" %>
